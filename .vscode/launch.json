{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/merge_cards.exe",
            "args": [],
            "stopAtEntry": false,
            "symbolSearchPath": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false
        },
        {
            "name": "(Windows) Launch with Args",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/boring_numbers.exe",
            "args": ["<", "${workspaceFolder}/boring_numbers.in"],
            "stopAtEntry": false,
            "symbolSearchPath": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false
        },
        {
            "name": "LLDB MacOS",
            "type": "lldb",
            "request": "custom",
            "cwd": "${workspaceFolder}",
            "targetCreateCommands": [
                "target create ${workspaceFolder}/rod_cutting"
            ],
            "processCreateCommands": [
                "settings set target.input-path rod_cutting.in",
                "process launch"
            ]
        },
    ]
}
